{
    "ini": {
        "g": 0.001
    },
    "ps_param_space": {
        "tau": 10.0,
        "E": 0.0
    },
    "param_space": {
        "n_pn": "eval 1: params['neuron_populations']['pn']['n']",
        "n_ln": "eval 1: params['neuron_populations']['ln']['n']"
    },
    "connectivity": {
        "name": "pns_lns_within_glo",
        "type": "CustomSparse",
        "param_names": [
            "n_pn",
            "n_ln"
        ],
        "row_build_code": [
            "const unsigned int offset= (unsigned int) $(id_pre)/((unsigned int) $(n_pn))*$(n_ln);",
            "for (unsigned int k= 0; k < $(n_ln); k++) {",
            "$(addSynapse, (offset+k));",
            "}",
            "$(endRow);",
            ""
        ],
        "calc_max_row_len_func": "eval 1: create_cmlf_class(lambda num_pre, num_post, pars: int(pars[1]))()"
    },
    "matrix_type": "SPARSE_INDIVIDUALG",
    "w_update_model": "StaticPulse"
}