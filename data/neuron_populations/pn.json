{
	"name" : "PN",
	"n" : "eval 1: params['neuron_populations']['or']['n'] * 5",
	"spike_rec" : false,
	"sim_code" : [
    "$(V)+= (-$(g_leak)*($(V)-$(V_leak)) - $(g_adapt)*$(a)*($(V)-$(V_adapt)) + $(r_scale)*$(Isyn)+$(noise_A)*$(gennrand_normal))*DT/$(C_mem);",
    "$(a)+= -$(a)*DT/$(tau_adapt);",
    "$(g_adapt) = $(g_adapt_0)*std::pow($(Q), ($(T)-$(T_ref))/10);",
    "$(g_leak) = $(g_leak_0)*std::pow($(Q), ($(T)-$(T_ref))/10);"
	],
	"reset_code" : [
    "$(V)= $(V_reset);",
    "$(a)+= 0.5;"
  ],
	"threshold_condition_code" : [
    "$(V) >= $(V_thresh)"
  ],
	"parameters" : {
    "C_mem": 1.0,
    "V_reset": -70.0,
    "V_thresh": -40.0,
    "V_leak": -60.0,
    "g_leak_0": 0.01,
    "r_scale": 1.0,
    "g_adapt_0": 0.0,
    "V_adapt": -70.0,
    "tau_adapt": 1000.0,
    "T_ref" : 36,
		"noise_A": "eval 1: 5/np.sqrt(params['simulations']['simulation']['dt'])"
	},
	"variables" : [
		{
			"name" : "V",
			"type" : "scalar",
			"value" : -60.0,
			"_comment_" : "Membrane voltage"
		},
		{
			"name" : "a",
			"type" : "scalar",
			"value" : 0.0,
			"_comment_" : "adaptive strength"
		},
		{
			"name" : "g_adapt",
			"type" : "scalar",
			"value" : 0.00,
			"_comment_" : "adaptive conductance"
		},
		{
			"name" : "g_leak",
			"type" : "scalar",
			"value" : 0.01,
			"_comment_" : "leak conductance"
		},
		{
			"name" : "T",
			"type" : "scalar",
			"value" : 36.0,
			"_comment_" : "leak conductance"
		},
		{
			"name" : "Q",
			"type" : "scalar",
			"value" : 10.0,
			"_comment_" : "leak conductance"
		}
	]
}
