{
	"name" : "orn",
	"n" : "eval 1: params['neuron_populations']['or']['n'] * 60",
	"spike_rec" : false,
	"sim_code" : [
    "$(V)+= (-$(g_leak)*($(V)-$(V_leak)) - $(g_adapt)*$(a)*($(V)-$(V_adapt)) + $(r_scale)*$(Isyn)+$(noise_A)*$(gennrand_normal))*DT/$(C_mem);",
    "$(a)+= -$(a)*DT/$(tau_adapt);"
	],
	"reset_code" : [
    "$(V)= $(V_reset);",
    "$(a)+= 0.5;"
  ],
	"threshold_condition_code" : [
    "$(V) >= $(V_thresh)"
  ],
	"parameters" : {
		"C_mem": 1.0,
		"V_reset": -70.0,
		"V_thresh": -40.0,
		"V_leak": -60.0,
		"g_leak": 0.01,
		"r_scale": 10.0,
		"g_adapt": 0.0015,
		"V_adapt": -70.0,
		"tau_adapt": 1000.0,
		"noise_A": "eval 1: 1.4/np.sqrt(params['simulations']['simulation']['dt'])"
	},
	"variables" : [
		{
			"name" : "V",
			"type" : "scalar",
			"value" : -60.0,
			"_comment_" : "Membrane voltage"
		},
		{
			"name" : "a",
			"type" : "scalar",
			"value" : 0.0,
			"_comment_" : "adaptive strength"
		}
	]
}
